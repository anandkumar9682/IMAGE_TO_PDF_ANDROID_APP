<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  tools:ignore="MissingDefaultResource">

  <data>

    <variable
      name="ViewModel"
      type="com.asuni.imagetopdf.viewmodels.AppPrivacyPolicyVM" />
  </data>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:padding="20dp"
      android:background="@color/red" >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Image to pdf converter"/>

    </LinearLayout>


    <ScrollView
      android:id="@+id/home_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/home_logo"
      android:orientation="vertical"
      android:padding="10dp"
      android:scrollIndicators="none">

      <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="18dp"
          android:textColor="@color/red"
          android:textStyle="bold"
          android:text="Privacy and Policy"/>

        <TextView
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="14dp"
          android:textColor="@color/red"
          android:text="Image to pdf application used to convert Image to Pdf file. this application ready user internal storage. this application applicaion not send anywhere user data and also not save datas"/>




      </LinearLayout>

    </ScrollView>

  </LinearLayout>

</layout>
