<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asuni.imagetopdf">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:glEsVersion="0x00020000" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />


    <application
        android:icon="@mipmap/images"
        android:requestLegacyExternalStorage="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/images"
        android:theme="@style/Theme.ImageToPdf">

        <activity
            android:name=".views.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.ImageToPdf"     android:screenOrientation="portrait" />
        <activity android:name=".aa.DocumentCamera"    android:screenOrientation="portrait" />
        <activity android:name=".views.ContactUS"     android:screenOrientation="portrait"/>
        <activity android:name=".views.AppPrivacyPolicy"     android:screenOrientation="portrait"/>

    </application>

</manifest>
